<p id="notice"><%= notice %></p>

<h1>Listing Columns</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Width</th>
      <th>Section</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @columns.each do |column| %>
      <tr>
        <td><%= column.title %></td>
        <td><%= column.width %></td>
        <td><%= column.section %></td>
        <td><%= link_to 'Show', [column.section.page, column.section, column] %></td>
        <td><%= link_to 'Edit', edit_page_section_column_path(column.section.page, column.section, column)%></td>
        <td><%= link_to 'Destroy', [column.section.page, column.section, column], :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Column', new_page_section_column_path %> |
<%= link_to 'Back', page_sections_path(@section.page) %>
