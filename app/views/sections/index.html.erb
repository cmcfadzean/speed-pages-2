<h1>Listing Sections</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Page</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.title %></td>
        <td><%= section.page %></td>
        <!-- /posts/:post_id/comments/:id -->
        <td><%= link_to 'Show', [section.page, section] %></td>
        <!-- /posts/:post_id/comments/:id/edit -->
        <td><%= link_to 'Edit', edit_page_section_path(section.page, section)%></td>
        <!-- /posts/:post_id/comments/:id -->
        <td><%= link_to 'Destroy', [section.page, section], :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<!-- /posts/:post_id/comments/new -->
<%= link_to 'New Section', new_page_section_path %>
<%= link_to 'Back', pages_path %>
