<p id="notice"><%= notice %></p>

<h1>Listing Blocks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Column</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blocks.each do |block| %>
      <tr>
        <td><%= block.title %></td>
        <td><%= block.content %></td>
        <td><%= block.column %></td>
        <td><%= link_to 'Show', [block.column.section.page, block.column.section, block.column, block] %></td>
        <td><%= link_to 'Edit', edit_page_section_column_block_path(block.column.section.page, block.column.section, block.column, block)%></td>
        <td><%= link_to 'Destroy', [block.column.section.page, block.column.section, block.column, block], :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Block', new_page_section_column_block_path %> |
<%= link_to 'Back', page_section_columns_path(@column.section.page, @column.section, @column) %>
